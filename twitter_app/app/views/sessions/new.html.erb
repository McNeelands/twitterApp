<img src="assets/bg.jpg" class="background-image">

<div class="login_container">
  <div class="container">
    <div class="row">
        <div class="col-lg-7 col-lg-offset-2 text-center">
          <div class="form">
          <h1 id="header">Sign In</h1>
          <%= form_for(:session, url: login_path) do |f| %>
      			  <%= f.email_field :email, class: "sign_up", :placeholder => "Email" %>
      			  <%= f.password_field :password, class: "sign_up", :placeholder => "Password" %><br>
      			  <%= f.submit "Sign in", class: "btn-submit" %>
      			<% end %>

          </div>
        </div>
    </div>
  </div>
</div>
