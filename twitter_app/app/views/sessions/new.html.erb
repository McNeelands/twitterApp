<img src="http://www.darrylburma.com/wp-content/uploads/2012/01/body-bg-blue-02.jpg" class="background-image">

<div class="signup">
  <div class="container">
    <div class="row">
        <div class="col-lg-7 col-lg-offset-3 text-center">
          <br>
          <br>
          <div class="form">
          <h1 id="header">Sign In <i class="fa fa-twitter"></i></h1>

          <%= form_for(:session, url: login_path) do |f| %>
      			  <%= f.email_field :email, class: "sign_up", :placeholder => "Email" %>
      			  <%= f.password_field :password, class: "sign_up", :placeholder => "Password" %>
              <br>
      			  <%= f.submit "Sign in", class: "btn-submit" %>
      			<% end %>

          </div>
        </div>
    </div>
  </div>
</div>
